<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <stroke
                    android:width="1dp"
                    android:color="@color/contact_list_status_green" />
                <solid android:color="@color/GA" />
                <padding
                    android:bottom="8dp"
                    android:left="16dp"
                    android:right="16dp"
                    android:top="8dp" />
                <corners android:radius="50dp" />
            </shape>
        </item>

        <item
            android:state_enabled="true"
            android:state_focused="true">
            <shape android:shape="rectangle">
                <stroke
                    android:width="1dp"
                    android:color="@color/contact_list_status_green" />
                <solid android:color="@color/GA" />
                <padding
                    android:bottom="8dp"
                    android:left="16dp"
                    android:right="16dp"
                    android:top="8dp" />
                <corners android:radius="50dp" />
            </shape>
        </item>

        <item android:state_enabled="true">
            <shape android:shape="rectangle">
                <stroke
                    android:width="1dp"
                    android:color="@color/contact_list_status_green" />
                <padding
                    android:bottom="8dp"
                    android:left="16dp"
                    android:right="16dp"
                    android:top="8dp" />
                <corners android:radius="50dp" />
            </shape>
        </item>
    </selector>