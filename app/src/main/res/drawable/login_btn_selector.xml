<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/BA" />
            <stroke android:width="1dp" android:color="@color/BA" />
            <corners android:radius="5dp"/>
        </shape></item>
        
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/BB" />
            <stroke android:width="1dp" android:color="@color/BB" />
            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/BB" />
            <stroke android:width="1dp" android:color="@color/BB" />
            <corners android:radius="5dp" />
        </shape></item>
        
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/GD" />
            <stroke android:width="1dp" android:color="@color/GD" />
            <corners android:radius="5dp" />
        </shape></item>
</selector>