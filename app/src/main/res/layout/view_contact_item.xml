<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/riv_contact_photo"

        android:layout_width="@dimen/contact_expandable_child_photo_size"
        android:layout_height="@dimen/contact_expandable_child_photo_size"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        app:riv_border_width="0dp"
        app:riv_corner_radius="@dimen/account_icon_circle_radius"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="repeat" />

    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/riv_contact_photo"
        android:layout_toLeftOf="@+id/iv_select_status"
        android:layout_toEndOf="@+id/riv_contact_photo"

        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_contact_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="4位群組成員"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/text_hint_gray" />

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_contact_job_title"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/text_black"
            android:text="Marketing" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_select_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_emptycircle"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/contact_expandable_group_divider"
        android:layout_alignParentBottom="true" />
</RelativeLayout>