<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/notice_list_item_padding_vertical">

    <TextView
        android:id="@+id/notice_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_padding"
        android:layout_marginStart="@dimen/activity_horizontal_padding"
        android:textColor="@color/list_not_read_blue"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/notice_item_department_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/notice_item_name_tv"
        android:layout_toEndOf="@+id/notice_item_name_tv"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/list_not_read_blue"
        android:textSize="@dimen/font_size_small" />

    <TextView
        android:id="@+id/notice_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/activity_vertical_padding"
        android:layout_marginEnd="@dimen/activity_vertical_padding"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/font_size_smaller"
        android:textColor="@color/list_not_read_blue" />

    <TextView
        android:id="@+id/notice_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_padding"
        android:layout_marginStart="@dimen/activity_horizontal_padding"
        android:layout_below="@+id/notice_item_name_tv"
        android:layout_marginTop="5dp"
        android:textColor="@color/list_not_read_blue"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/notice_item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/activity_horizontal_padding"
        android:layout_marginStart="@dimen/activity_horizontal_padding"
        android:layout_below="@+id/notice_item_title_tv"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/notice_item_attach_iv"
        android:layout_toStartOf="@+id/notice_item_attach_iv"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/font_size_medium" />

    <ImageView
        android:id="@+id/notice_item_attach_iv"
        android:layout_width="@dimen/announce_list_item_attach_icon"
        android:layout_height="@dimen/announce_list_item_attach_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/notice_item_title_tv"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/activity_vertical_padding"
        android:layout_marginEnd="@dimen/activity_vertical_padding"
        android:src="@drawable/ic_paperclip" />

</RelativeLayout>