<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_expandable_group_height"
    android:background="@color/contact_expandable_group_bk">

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:layout_marginLeft="@dimen/activity_horizontal_padding"
        android:layout_marginStart="@dimen/activity_horizontal_padding"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_size_medium" />

    <ImageView
        android:id="@+id/group_expand_icon"
        android:layout_width="@dimen/contact_expandable_group_expand_icon_size"
        android:layout_height="@dimen/contact_expandable_group_expand_icon_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/activity_horizontal_padding"
        android:layout_marginEnd="@dimen/activity_horizontal_padding"
        android:layout_centerVertical="true"/>
</RelativeLayout>